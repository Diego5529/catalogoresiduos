<h1>Listing empresas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo empresa</th>
      <th>Codigo ibge</th>
      <th>Id ramo atividade</th>
      <th>Cpf cnpj</th>
      <th>Nome fantasia</th>
      <th>Razao social</th>
      <th>Usuario login</th>
      <th>Senha</th>
      <th>Recuperar senha</th>
      <th>Email</th>
      <th>Email alternativo</th>
      <th>Url site</th>
      <th>Telefone</th>
      <th>Fax</th>
      <th>Endereco</th>
      <th>Numero</th>
      <th>Complemento</th>
      <th>Bairro</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Nome responsavel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.codigo_empresa %></td>
        <td><%= empresa.codigo_ibge %></td>
        <td><%= empresa.id_ramo_atividade %></td>
        <td><%= empresa.cpf_cnpj %></td>
        <td><%= empresa.nome_fantasia %></td>
        <td><%= empresa.razao_social %></td>
        <td><%= empresa.usuario_login %></td>
        <td><%= empresa.senha %></td>
        <td><%= empresa.recuperar_senha %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.email_alternativo %></td>
        <td><%= empresa.url_site %></td>
        <td><%= empresa.telefone %></td>
        <td><%= empresa.fax %></td>
        <td><%= empresa.endereco %></td>
        <td><%= empresa.numero %></td>
        <td><%= empresa.complemento %></td>
        <td><%= empresa.bairro %></td>
        <td><%= empresa.cep %></td>
        <td><%= empresa.cidade %></td>
        <td><%= empresa.estado %></td>
        <td><%= empresa.nome_responsavel %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

